{
    "name": "@rapidjs.org/rjs-cli",
    "version": "0.1.0",
    "description": "rapidJS (rJS): No- and low-code ecosystem for JavaScript.",
    "author": "Thassilo Martin Schiepanski",
    "homepage": "https://rapidjs.org",
    "keywords": [
        "rapidjs",
        "rapidjs.org"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rapidjs-org/rjs.git"
    },
    "bugs": {
        "url": "https://github.com/rapidjs-org/rjs/issues"
    },
    "bin": {
        "rjs": "./build/cli.js"
    },
    "files": [
        "./build/",
        "./types/",
        "./templates/",
        "./cli.help.txt",
        "./cli.gen.help.txt"
    ],
    "scripts": {
        "copy-shared": "node ../../scripts/copy-shared.js rjs-cli",
        "clean": "rm -rf ./build && rm -rf ./types",
        "debug": "npm run copy-shared && npx tsc --project ./tsconfig.debug.json",
        "debug:watch": "npm run debug -- --watch",
        "build": "npm run clean && npm run copy-shared && npx tsc --project ./tsconfig.build.json",
        "test:cli": "npx rjs-test cli ./test/cli/",
        "test": "npm run test:cli",
        "bin": "./rjs.sh"
    },
    "devDependencies": {
        "@rapidjs.org/testing": "0.x",
        "@rapidjs.org/testing-cli": "0.x",
        "@types/node": "^20.10.6",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@rapidjs.org/rjs": "0.x",
        "@rapidjs.org/rjs-proxy": "0.x"
    }
}
